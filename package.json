{
  "name": "co-canvas",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "format": "biome format --write .",
    "lint:fast": "biome lint .",
    "lint:fast:fix": "biome lint --write .",
    "lint:deep": "eslint . --cache",
    "lint:deep:fix": "eslint . --fix --cache",
    "check": "pnpm run lint:fast && pnpm run lint:deep",
    "preview": "pnpm run build && vite preview",
    "deploy": "pnpm run build && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "pnpx wrangler d1 migrations apply co-canvas-db --local",
    "db:migrate:prod": "pnpx wrangler d1 migrations apply co-canvas-db --remote",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "cf-typegen": "wrangler types",
    "test": "vitest --config vitest.config.ts --run",
    "test:coverage": "vitest --config vitest.config.ts --run --coverage",
    "test:worker": "pnpm run build && vitest --config vitest.worker.config.ts --run",
    "test:worker:coverage": "pnpm run build && vitest --config vitest.worker.config.ts --run --coverage",
    "test:all": "pnpm run test && pnpm run test:worker",
    "test:all:coverage": "pnpm run test:coverage && pnpm run test:worker:coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.90.11",
    "@tldraw/sync": "^3.15.5",
    "@tldraw/sync-core": "^3.15.5",
    "@tldraw/tlschema": "^3.15.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "es-toolkit": "^1.42.0",
    "hono": "^4.10.7",
    "lucide-react": "^0.555.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tldraw": "^3.15.5",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@cloudflare/vite-plugin": "^1.15.3",
    "@cloudflare/vitest-pool-workers": "^0.10.11",
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-dom": "^2.3.9",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-react-x": "^2.3.9",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "~3.2.4",
    "wrangler": "^4.51.0"
  }
}
